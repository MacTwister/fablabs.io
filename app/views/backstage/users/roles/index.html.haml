= render "backstage/header"

.container
  .row
    .col-lg-12
      = title "User #{@user} roles"

      %table.table
        %thead
          %tr
            %th Name
            %th Resource
            %th Resource Type
            %th Actions
        %tbody
          - @roles.each do |role|
            %tr
              %td= role.name
              %td= role.resource
              %td= role.resource_type
              %td
                = link_to 'delete', [:backstage, @user, role], method: :delete, confirm: 'Are you sure?'

      = link_to 'Add role', [:new, :backstage, @user, :role], class: 'btn btn-primary'


