- cache ["v2", machine] do
  = content_tag_for :div, machine, class: 'card small' do
    .card-image
      = link_to machine do
        - if machine.photo.present?
          = image_tag machine.photo.thumb("230x245>").url

    .card-content
      .card-subtitle= machine.brand
      .card-title= machine

      = link_to machine do
        %i.card-arrow.fa.fa-arrow-right

