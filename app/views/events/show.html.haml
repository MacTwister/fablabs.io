.container.mt-4
  = render "breadcrumbs", event: @event
  = title @event
  %br
  .font-weight-bold
    = @event.starts_at&.stamp('12th November 2012')
    \-
    = @event.ends_at&.stamp('12th November 2012')
  .font-italic
    = @event.starts_at&.stamp('15:30')
    \-
    = @event.ends_at&.stamp('15:30')

  %br
  %p.font-italic Created by #{link_to @event.creator, @event.creator}
  = simple_format @event.description

  = link_to "Edit Event", edit_lab_event_path(@event.lab, @event), class: 'btn btn-primary'
