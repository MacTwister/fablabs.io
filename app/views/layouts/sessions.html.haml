!!!
%html
  %head
    %title= content_for?(:title) ? "#{yield(:title)} | FabLabs" : "FabLabs"
    %meta{ name: "viewport", content: "width=device-width" }
    = javascript_include_tag "https://code.jquery.com/jquery-3.3.1.slim.min.js"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"
    = javascript_include_tag "http://code.jquery.com/ui/1.10.3/jquery-ui.js"
    = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"

    %link{href: "https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-SI27wrMjH3ZZ89r4o+fGIJtnzkAnFs3E4qz9DIYioCQ5l9Rd/7UAa8DHcaL8jkWt", crossorigin: "anonymous"}
    %script{src: "https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js", integrity: "sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6", crossorigin: "anonymous"}
    %script{src: "https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/js/bootstrap.bundle.min.js", integrity: "sha384-Iep5TjrwnXOp2AdreAjhlprhxI5Ix8Y3I/zJd1tNQZQmonaE3i6fTdrvIG9YjOWl", crossorigin: "anonymous"}
    %link{href: "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel: "stylesheet", integrity: "sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin: "anonymous"}

    %link{rel: "canonical", href: "#{request.url.split('?').first}"}
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Open+Sans:400|Montserrat"
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "sessions", "data-turbolinks-track" => true
    %link{type: "text/plain", rel: "author", href: "/humans.txt"}
    = csrf_meta_tags
    :css
      body {
        background-image: url('#{image_path("/elefant-bg.jpg")}');
      }
    = cookie_policy_script
  %body.sessions{ class: body_classes }
    #main
      - if flash.any?
        .row
          .col-lg-12
          - flash.each do |name, msg|
            = content_tag :div, msg, class: flash_class(name)
      = yield

      .bg-info
        #{link_to "ELEFAB", "http://www.fablabbcn.org/2013/10/elefab-2/"}, by #{link_to "Fab Lab Barcelona", "/fablabbcn"}

    = render "application/footer_scripts"
