-# frozen_string_literal: true

.mb-3
  = link_to "Back to Jobs", jobs_url
= simple_form_for(@job, html: { class: 'border shadow p-4' } ) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.input :tag_list, input_html: { value: @job.tag_list.join(', ') }
    = f.input :description
    = f.input :apply_url
    =# f.input :is_featured
    =# f.input :is_verified
    =# f.association :user
    = f.input :min_salary
    = f.input :max_salary
    = f.input :country_code, as: 'country', label: 'Country', input_html: { data: {geo: "country_short"} }, wrapper_html: { class: 'boo'}, iso_codes: true#, input_html: { class: 'enhanced'}

  .form-actions
    = f.button :submit
