.row
    .homepage-news.col-12
        .container
            .row
                .col-12.col-md-6
                    .homepage-box.card
                        .text-large.text-primary-custom News from the Fablab network
                        .text-medium What is a Fab Lab in 3 words? 10 years later!
                        .homepage-spacer-lg
                        %iframe{:width=>"100%", :height=>"315", :src=>"https://www.youtube.com/embed/VKDEvtdW9TU?controls=0", :frameborder=>"0", :allow=>"accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture", :allowfullscreen => "true"}
                .col-12.col-md-6
                    .homepage-box.card
                        .text-large.text-primary-custom New Fablabs
                        .text-medium Discover new labs that recently joined the network
                        .homepage-spacer-lg
                        .homepage-lab-avatars
                            .row
                                - @recent_labs.each do |lab|
                                    .homepage-lab-avatar.col-xs-4.col-md-4
                                        = link_to lab do
                                            .text-center
                                                = image_tag lab.avatar.thumb('96x96#').url, class: 'small avatar', itemprop: "logo"
                                                .text-small.text-center{itemprop: "name",:style =>"white-space: nowrap"}= truncate(lab.name,length: 15)
